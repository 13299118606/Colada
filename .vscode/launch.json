  "version": "0.2.0",
  "configurations": [
  {
    "name": "(gdb) Attach",
    "type": "cppdbg",
    "request": "attach",
    "program": "${workspaceFolder}/d/Slicer-build/bin/ColadaApp-real",
    "processId": "${command:pickProcess}",
    "MIMode": "gdb",
    "setupCommands": [
        {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
        }
    ],
   // "externalConsole": false
  },
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      }
    }
  ]
}